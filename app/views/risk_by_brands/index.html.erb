<p id="notice"><%= notice %></p>

<h1>Risk By Brands</h1>

<table>
  <thead>
    <tr>
      <th>Brand</th>
      <th>Screen risk</th>
      <th>Total loss risk</th>
      <th>Battery risk</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @risk_by_brands.each do |risk_by_brand| %>
      <tr>
        <td><%= risk_by_brand.brand %></td>
        <td><%= risk_by_brand.screen_risk %></td>
        <td><%= risk_by_brand.total_loss_risk %></td>
        <td><%= risk_by_brand.battery_risk %></td>
        <td><%= link_to 'Show', risk_by_brand %></td>
        <td><%= link_to 'Edit', edit_risk_by_brand_path(risk_by_brand) %></td>
        <td><%= link_to 'Destroy', risk_by_brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

